{
    "hyprland/workspaces": {
        "on-click": "activate",
        "active-only": true,
        "format": "{}"
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
            "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },
    "custom/updates": {
        "format": "   {}",
        "tooltip-format": "{}",
        "escape": true,
        "return-type": "json",
        "exec": "$HOME/Dotfiles/scripts/countupdates.sh",
        "restart-interval": 60,
        "on-click": "alacritty --class floating -e $HOME/Dotfiles/scripts/installupdates.sh",
        "tooltip": false
    },
    "custom/exit": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },
    "clock": {
        "format": "{:%b %d %H:%M}",
        "on-click": "firefox --new-tab https://calendar.google.com/calendar/u/0/r/month",
        "tooltip-format": "<tt>{calendar}</tt>"
    },
    "custom/system": {
        "format": "",
        "tooltip": false
    },
    "cpu": {
        "format": "CPU  {usage}%  ",
        "on-click": "alacritty -e htop"
    },
    "memory": {
        "format": "MEM  {}%  ",
        "on-click": "alacritty -e htop"
    },
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/system",
            "cpu",
            "memory"
        ]
    },
    "network": {
        "format": "{ifname}",
        "format-wifi": "    {essid}",
        "format-ethernet": "󰈀   {ifname}",
        "format-disconnected": "Disconnected",
        "tooltip-format-wifi": "    {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
        "tooltip-format-ethernet": "󰈀  {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "alacritty --class floating -e nmtui connect"
    },
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "interval": 5,
        "format": "{icon}  {capacity}%",
        "format-charging": "  {capacity}%",
        "format-plugged": "  {capacity}%",
        "format-icons": [
            " ",
            " ",
            " ",
            " ",
            " "
        ]
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "tooltip": true,
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "tray": {
        "icon-size": 20,
        "spacing": 13
    }
}
